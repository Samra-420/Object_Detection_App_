<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Optional: For better camera experience -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <!-- If you want to support front camera too -->
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />

    <!-- For TTS if you're using it -->
    <uses-permission android:name="android.permission.INTERNET" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Object_Detection_App"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="31">

        <!-- Splash Activity (First Activity) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Menu Activity -->
        <activity
            android:name=".MainMenuActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Object_Detection_App" />

        <!-- Camera Activity -->
        <activity
            android:name=".CameraActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <!-- How It Works Activity -->
        <activity
            android:name=".HowItWorksActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Object_Detection_App" />

        <!-- Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Object_Detection_App" />



        <!-- Remove MainActivity since you don't have it -->
        <!-- <activity android:name=".MainActivity" android:exported="false" /> -->

    </application>

</manifest>