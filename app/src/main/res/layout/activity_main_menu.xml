<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_gradient_background"
    android:padding="24dp"
    tools:context=".MainMenuActivity">

    <!-- App Icon and Title -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- App Icon with better design -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/icon_gradient_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:elevation="12dp"
            app:cornerRadius="50dp">

            <!-- AI + Vision Icon Combination -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘ï¸â€ðŸ—¨ï¸"
                    android:textSize="48sp"
                    android:contentDescription="Eye with speech bubble icon" />


            </LinearLayout>
        </LinearLayout>

        <!-- App Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vision AI"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginTop="24dp" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Object Detection Assistant"
            android:textSize="16sp"
            android:textColor="#5C6BC0"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Main Menu Cards Container -->
    <LinearLayout
        android:id="@+id/cardsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Start Detection Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:contentDescription="Start object detection"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                android:gravity="center_vertical">

                <!-- Icon Container -->
                <LinearLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="#E3F2FD"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:cornerRadius="28dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“±"
                        android:textSize="28sp"
                        android:contentDescription="Camera icon" />
                </LinearLayout>

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Live Detection"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#263238" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Real-time object detection using camera"
                        android:textSize="13sp"
                        android:textColor="#546E7A"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Arrow Indicator -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âž”"
                    android:textSize="20sp"
                    android:textColor="#2196F3" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- How It Works Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:contentDescription="How the app works"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                android:gravity="center_vertical">

                <!-- Icon Container -->
                <LinearLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="#FFF3E0"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:cornerRadius="28dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“˜"
                        android:textSize="28sp"
                        android:contentDescription="Guide icon" />
                </LinearLayout>

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Guide"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#263238" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn how to use the app effectively"
                        android:textSize="13sp"
                        android:textColor="#546E7A"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Arrow Indicator -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âž”"
                    android:textSize="20sp"
                    android:textColor="#FF9800" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:contentDescription="Accessibility settings">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                android:gravity="center_vertical">

                <!-- Icon Container -->
                <LinearLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="#E8F5E9"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:cornerRadius="28dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš¡"
                        android:textSize="28sp"
                        android:contentDescription="Settings icon" />
                </LinearLayout>

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preferences"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#263238" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customize voice, sensitivity and other settings"
                        android:textSize="13sp"
                        android:textColor="#546E7A"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Arrow Indicator -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âž”"
                    android:textSize="20sp"
                    android:textColor="#4CAF50" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Footer Info -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="AI Vision Assistant â€¢ v1.0"
        android:textSize="12sp"
        android:textColor="#78909C"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>